<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="3"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/playAgainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:background="#3DB0E4"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/winTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="you won"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play again"
            android:onClick="playAgain"
            android:background="#0D29C6"
            android:textColor="#F8F4F4"
            android:textStyle="bold"
            android:padding="10dp"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/my_table"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center">


            <ImageView
                android:id="@+id/imgView1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="onClickDropIn"
                android:tag="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/imgView2"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:onClick="onClickDropIn"
                android:tag="1"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/imgView3"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:onClick="onClickDropIn"
                android:tag="2"/>

        <ImageView
            android:id="@+id/imgView4"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12dp"
            android:onClick="onClickDropIn"
            android:tag="3" />
        <ImageView
            android:id="@+id/imgView5"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:onClick="onClickDropIn"
            android:tag="4" />
        <ImageView
            android:id="@+id/imgView6"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:onClick="onClickDropIn"
            android:tag="5"/>

            <ImageView
                android:id="@+id/imgView7"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"
                android:onClick="onClickDropIn"
                android:tag="6" />
            <ImageView
                android:id="@+id/imgView8"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:onClick="onClickDropIn"
                android:tag="7" />
            <ImageView
                android:id="@+id/imgView9"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="2"
               android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"
                android:onClick="onClickDropIn"
                android:tag="8" />
    </GridLayout>
</LinearLayout>