<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/playLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:padding="50dp"
        android:background="@color/colorAccent"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play!"
            android:textSize="30sp"
            android:textColor="#fff"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:paddingTop="20dp">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layout2"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="30s"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:textSize="25sp"
                android:background="#eaa"/>

            <TextView
                android:id="@+id/equationTextView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="2+3"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="0/5"
                android:textSize="25sp"
                android:background="#ddf"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout1"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="30dp">

            <TextView
                android:id="@+id/option1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="116"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="0"
                android:padding="20dp"
                android:textSize="70sp"
                android:background="#D735C1D3"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/option2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="136"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="1"
                android:padding="20dp"
                android:textSize="70sp"
                android:background="#CE8B3BBD"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout2"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/option3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="116"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="2"
                android:padding="20dp"
                android:textSize="70sp"
                android:background="#CEF63375"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/option4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="136"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="3"
                android:padding="20dp"
                android:textSize="70sp"
                android:background="#CEF4AB3E"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/layout3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="30dp"
            android:textSize="30sp"
            android:textColor="#0F9386"
            android:textStyle="bold|italic"/>
        <Button
            android:id="@+id/playAgainBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play again!"
            app:layout_constraintTop_toBottomOf="@+id/resultTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#2ABAAC"
            android:textColor="#F8F1F6F2"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>